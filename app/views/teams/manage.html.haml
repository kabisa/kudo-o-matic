= render 'layouts/header'
.page
  .settings-container
    .title-container
      %h1.settings-title
        Manage #{current_team.name}
      .actions
        = link_to dashboard_path(team: current_team.slug), method: "get", class: 'btn secondary' do
          <i class="fa fa-arrow-left" aria-hidden="true"></i> Back to dashboard
    - flash.each do |key, value|
      .message-container.show-message
        .margin-bottom{:class => "#{key}-message"}
          %span.message
            .fa.fa-exclamation-circle
            .message{:class => key}= value
          .fa.fa-times.close-message
    %h2.settings-subtitle
      Invite users
    - if @team_invite_submissions.errors.any?
      - @team_invite_submissions.errors.full_messages.each do |msg|
        .message-container.show-message
          .margin-bottom{:class => "error-message"}
            %span.message
              .fa.fa-exclamation-circle
              .message{class: :error}= msg
    %p Please enter a comma-separated list of email adresses.
    = form_for(@team_invite_submissions, url: {controller: :team_invite, action: :create}) do |f|
      = f.text_area(:emails, id: 'email-invite-textarea')
      .form-actions.actions
        = button_tag(type: :submit, class: 'btn btn-default', id: 'send-invites') do
          <i class="fa fa-paper-plane" aria-hidden="true"></i> Send invites

