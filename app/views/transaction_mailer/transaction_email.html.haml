%tr
  %td.content
    = "You just received #{ApplicationController.helpers.number_to_kudos(@transaction.amount)} from"
    = "#{@transaction.sender.name} for '#{@transaction.activity}'! \u{1f389}".html_safe
    %br
    Show your appreciation by liking the
    = "#{link_to 'transaction', root_url}.".html_safe
    = "\u{1f44d}"
    %p
    - if @transaction.image.present?
      .media-attachment
        .img-file
          = link_to image_tag(@transaction.image.url(:thumb), class: 'image'), @transaction.image.url, target: '_blank'
    %p
      = "There is #{kudos_to_next_goal} â‚­ left until goal '#{Goal.next.name}' is reached."
