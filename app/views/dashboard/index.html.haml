%body
  .page
    .header
      .container-header
        %img.logo{src: 'https://www.kabisa.nl/images/kabisa-logo-contact-658ee9c2.png'}
    .body
      .container-left
        %div#new-transaction
          %button.transaction-button{onclick:'showDiv()'}
            New Transaction
            %i.fa.fa-pencil-square.hvr-icon-fade
        .statistics
          %h1
            Transactions
          .all
            .value
              = Transaction.all.count(:id)
            .label
              total
          .month
            .value
              = Transaction.where(created_at: (Time.now.beginning_of_month..Time.now.end_of_month)).count(:id)
            .label
              monthly
          .weekly
            .value
              = Transaction.where(created_at: (Time.now.beginning_of_week(start_day = :monday)..Time.now.end_of_week())).count(:id)
            .label
              weekly
      .container-center
        %div#create-transaction-container
          %div
            %h1.transaction-container-title
              Give ₭udo's!
            = simple_form_for @transaction do |f|
              .receiver
                = f.input_field :receiver_name, data: { autocomplete_source: users_autocomplete_path}, field_id: false,  placeholder: 'Receiver', required: true , maxlength: '35'
              .amount
                = f.input_field :amount, input_html:{ min: '0', max: '999', step: 'any'} , placeholder: '₭',required: true
                %span.currency
                  ₭
              .activity
                = f.input_field :activity_name, as: :text, data: { autocomplete_source: activities_autocomplete_path}, field_id: false,  placeholder: "Write here the reason why you are giving ₭udo's", required: true, maxlength: '70'
              .submit
                = f.submit t('dashboard.submit_kudos'), class: 'fa fa-paper-plane', id: 'send-kudos-button'
        .timeline-container
          - @transactions.each do |transaction|
            .transaction-container
              .transaction-header-container
                .transaction-kudos-container
                  = "+#{transaction.amount}"
                  %span.currency
                    ₭
                .transaction-avatar-container
                  %div
                    = image_tag transaction.receiver_image, class:'avatar'
              .transaction-body-container
                .transaction-content
                  %span
                    = "#{transaction.sender.name}:"
                  %span.highlighted
                    = "+#{transaction.amount} ₭"
                  %span
                    to
                  %span.highlighted
                    = transaction.receiver_name_feed
                  %span
                    for
                  %span.highlighted
                    = transaction.activity_name_feed
              %div
                %button#like-button
                  Like
                %span.post-time-stamp
                  = "#{distance_of_time_in_words(DateTime.now, transaction.created_at)} ago"
          = paginate @transactions
      .container-right
        .kudo-jar-container
          .kudo-jar
            .kudo-jar-amount

