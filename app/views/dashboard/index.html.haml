.topouterwrapper
  .topinnerwrapper
    .story
      %p
        Check out the ₭udo stories. Get inspired to give ₭udos!
      %p
      -# The current amount of ₭udo Coins is:
        = @balance.amount
        out of
        = @next.amount
    .jarwrapper
      = link_to new_transaction_path do
        .loader{data: {balance_percentage: @balance.percentage, balance_coins: @balance.amount }}
          #lid
            %p
              OPEN TO ADD KUDOS
          #toppart
          #glass{:valuemax => "#{@next.amount}", :valuemin => "#{@previous.amount}", :valuenow => "#{@balance.amount}"}
            .next-goal
              .balance.small-title
                = @next.kudos
                \-
            #textonjar
            #cubes
              %div
              %div
