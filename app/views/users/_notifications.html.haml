%h2.title-container
  Notifications
  - flash.each do |key, value|
    .message-container.show-message
      .margin-bottom{:class => "#{key}-message"}
        %span.message
          .fa.fa-exclamation-circle
          .message{:class => key}= value
.text-container.has-table
  = form_for @user, url: settings_path do |f|
    %table.settings-table
      %tr
        %td
          = f.label :transaction_received_mail
        %td.settings-table-value
          = f.check_box :transaction_received_mail, class: 'settings-checkbox'
      %tr
        %td
          = f.label :goal_reached_mail
        %td.settings-table-value
          = f.check_box :goal_reached_mail, class: 'settings-checkbox'
      %tr
        %td
          = f.label :summary_mail
        %td.settings-table-value
          = f.check_box :summary_mail, class: 'settings-checkbox'
    = f.submit class: 'btn btn-primary btn-save'

