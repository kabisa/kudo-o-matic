.header-bg
  .header
    .img-container
      %a{href: root_url}
        = image_tag('kudo-o-matic-white.png', class:'header-img')
        = image_tag('lizard.png', class:'mobile-img')
    .github
      %p
        = "Bugs, issues or suggestions?\n Please report them"
        %a{href:'https://github.com/kabisa/kudo-o-matic/issues', target:'blank'}
          here!
.sign-in-page.flex-page
  .sign-in-container
    .sign-in-header
    .sign-in-body
      .body-content
        = image_tag 'logo-without-lizard-black.png'
        %a.btn-google{href:user_google_oauth2_omniauth_authorize_path}
          = 'Log in with Google+'
        - if notice
          .message-container.error-message.margin-top
            %span.message
              .fa.fa-exclamation-circle
              #notice= notice
    .sign-in-footer
      *You can only log in with a Google account from Kabisa


