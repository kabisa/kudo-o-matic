= render 'layouts/header'
.sign-up-page.flex-page
  .sign-up-container
    %h2 Forgot your password?
    = simple_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post, class: 'sign-up-form' }) do |f|
      = f.error_notification
      .form-field
        = f.label :email, class: 'fa user' do
          %span.hidden
            E-mail
        = f.text_field :email, required: true, autofocus: true, placeholder: 'Your e-mail'
      .form-actions
        = f.button :submit, "Send me reset password link"
    = render "devise/shared/links"
