.dropdown
  .profile-picture
    .profile-img{style: "background-image: url(#{current_user.picture_url})"}
  .drop-menu
    %a.dropdown-container.current-user{href:'#'}
      %span.username
        = current_user
      .fa.fa-chevron-down#profile-dropdown
    .profile.dropdown-content
      .menu-tooltip
      %a.menu-content.help-me{href:"#"}
        %span.flex-item
          FAQ
        %i.fa.fa-question-circle
      %a.menu-content.whatsnew{href:"#"}
        %span.flex-item
          Releases
        %i.fa.fa-wrench
      -if current_user.multiple_teams? || current_user.invites?
        %a.menu-content{href: '/'}
          %span.flex-item
            Teams & invites
          %i.fa.fa-users
      %a.menu-content{href: '/teams/new'}
        %span.flex-item
          New team
        %i.fa.fa-plus
      - if current_user.admin_of?(current_team)
        %a.menu-content{id: 'team-manage-button-desktop', href: manage_team_url(team: current_team.slug)}
          %span.flex-item
            Edit team
          %i.fa.fa-users
      %a.menu-content{href: '/account'}
        %span.flex-item
          Account
        %i.fa.fa-user
      %a.menu-content{href: '/settings'}
        %span.flex-item
          Settings
        %i.fa.fa-cog
      - if current_user.try(:admin)
        %a.menu-content{href: '/admin'}
          %span.flex-item
            Admin
          %i.fa.fa-users
      %a.menu-content{href:sign_out_path}
        %span.flex-item
          Sign Out
        %i.fa.fa-sign-out
  .user-statistics-container
    .userstatistics.send-transactions
      %span.statistics-title
        Given
      %span.statistics-value
        = @sent_transactions_user
    .userstatistics.received-transactions
      %span.statistics-title
        Received
      %span.statistics-value
        = @received_transactions_user
    .userstatistics.my-transactions
      %span.statistics-title
        Total
      %span.statistics-value
        = @all_transactions_user

